                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <br>
    <h2 style="text-align: center;">Consulta 2</h2>
    
    <!--TABLA-->
    <table class="table table-hover" style="margin-top:2%;">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Titulo de la Pelicula</th>
            <th scope="col">Imagen de la Pelicula</th>
            <th scope="col">Sinopsis</th>
            <th scope="col">Genero</th>
          </tr>
        </thead>
        <tbody>
            <% Pelgen.forEach(function(pelgen){ %>
                <tr>
                    
                    <td width="250px"><%= pelgen.titulo %></td>
                    <td width="300px"><img src='<%= pelgen.imagen %>' width="210px" height="220px"></td>
                    <td width="570px" style="font-size: 16px; text-align: justify;"><%= pelgen.sinopsis %></td>
                    <td ><%= pelgen.nombreGenero %></td>
                    
                </tr>
            <% }); %>
          
        </tbody>
      </table>



    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
