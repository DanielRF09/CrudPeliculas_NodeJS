<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>Lista de Actores</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">CRUD Peliculas</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    
                    <li class="nav-item">
                        <a class="nav-link" href="/">Ver Peliculas</a>
                    </li>
                    <li class="nav-item">
                        <a href="/agregar" class="nav-link" >Añadir Pelicula</a>
                    </li>
                    <li class="nav-item">
                        <a href="/actores" class="nav-link" >Ver Actores</a>
                    </li>
                    <li class="nav-item">
                        <a href="/directores" class="nav-link" >Ver Directores</a>
                    </li>
                    <li class="nav-item">
                        <a href="/generos" class="nav-link" >Ver Generos de peliculas</a>
                    </li>
                    <li class="nav-item">
                        <a href="/repartos" class="nav-link" >Ver Relacion Reparto de Actores - Peliculas</a>
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>

    <table style="margin: 20px;">
        <tr>
            <td><a href="/agregar-actor" class="btn btn-info" style="margin-right: 30px;">Añadir Actor</a></td>
        </tr>
    </table>
    

    <!--TABLA-->
    <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Ap. Paterno</th>
            <th scope="col">Ap. Materno</th>
            <th scope="col">Fecha de Nacimiento</th>
            <th scope="col">Sexo</th>
            <th scope="col">Nacionalidad</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
            <% Actor.forEach(function(actor){ %>
                <tr>
                    <th scope="row"><%= actor.idActor %></th>
                    <td><%= actor.nombreActor %></td>
                    <td><%= actor.appatActor %></td>
                    <td><%= actor.apmatActor %></td>
                    <td><%= actor.fechaActor %></td>
                    <td><%= actor.sexoActor %></td>
                    <td><%= actor.nacionalidadActor %></td>
                    
                    <td>
                        <a href="editar-actor/<%= actor.idActor %>" type="button" class="btn btn-warning">Editar</a>
                        <a href="eliminar-actor/<%= actor.idActor %>" type="button" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            <% }); %>
          
        </tbody>
      </table>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    
</body>
</html>