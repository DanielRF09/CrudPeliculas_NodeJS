            <th scope="col">Sinopsis</th>
            <th scope="col">Acci칩n</th>
          </tr>
        </thead>
        <tbody>
            <% Pelicula.forEach(function(pelicula){ %>
                <tr>
                    <th scope="row"><%= pelicula.idPelicula %></th>
                    <td><%= pelicula.titulo %></td>
                    <td width="250px"><img src='<%= pelicula.imagen %>' width="210px" height="220px"></td>
                    <td><%= pelicula.idGenero %></td>
                    <td width="150px" style="font-size: 13px;"><%= pelicula.fechaPelicula %></td>
                    <td><%= pelicula.duracion %></td>
                    <td><%= pelicula.clasificacion %></td>
                    <td><%= pelicula.idDirector %></td>
                    <td width="350px" style="font-size: 13px; text-align: justify;"><%= pelicula.sinopsis %></td>
                    <td>
                        <a href="editar/<%= pelicula.idPelicula %>" type="button" class="btn btn-warning">Editar</a>
                        <a href="eliminar/<%= pelicula.idPelicula %>" type="button" class="btn btn-danger">Eliminar</a>
