    <!--TABLA-->
    <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Imagen</th>
            <th scope="col">idGenero</th>
            <th scope="col">Fecha</th>
            <th scope="col">Duraci칩n</th>
